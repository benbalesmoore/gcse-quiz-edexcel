[
  /* =======================
     Cell Biology (10)
     ======================= */
  {"subject":"Biology","topic":"Cell Biology","examBoard":"Edexcel","q":"Which structure controls what enters and leaves an animal cell?","choices":["Cell wall","Cell membrane","Nucleus","Vacuole"],"answerIndex":1,"explanation":"The cell membrane regulates movement of substances in and out."},
  {"subject":"Biology","topic":"Cell Biology","examBoard":"Edexcel","q":"Where is most genetic material found in an animal cell?","choices":["Ribosomes","Cytoplasm","Nucleus","Cell membrane"],"answerIndex":2,"explanation":"DNA is primarily located in the nucleus."},
  {"subject":"Biology","topic":"Cell Biology","examBoard":"Edexcel","q":"Which organelle is the main site of aerobic respiration?","choices":["Ribosome","Mitochondrion","Chloroplast","Nucleus"],"answerIndex":1,"explanation":"Aerobic respiration occurs mainly in mitochondria."},
  {"subject":"Biology","topic":"Cell Biology","examBoard":"Edexcel","q":"Which structure is present in plant cells but not animal cells?","choices":["Cell membrane","Mitochondria","Cell wall","Ribosomes"],"answerIndex":2,"explanation":"Plant cells have a cellulose cell wall."},
  {"subject":"Biology","topic":"Cell Biology","examBoard":"Edexcel","q":"Which process describes movement of water across a partially permeable membrane?","choices":["Diffusion","Osmosis","Active transport","Evaporation"],"answerIndex":1,"explanation":"Osmosis is the net movement of water through a partially permeable membrane."},
  {"subject":"Biology","topic":"Cell Biology","examBoard":"Edexcel","q":"Diffusion is the net movement of particles from:","choices":["Low to high concentration","High to low concentration","Large to small particles only","Inside to outside only"],"answerIndex":1,"explanation":"Diffusion is movement down a concentration gradient."},
  {"subject":"Biology","topic":"Cell Biology","examBoard":"Edexcel","q":"Which factor would increase the rate of diffusion?","choices":["Lower temperature","Smaller concentration difference","Larger surface area","Thicker membrane"],"answerIndex":2,"explanation":"A larger surface area increases diffusion rate."},
  {"subject":"Biology","topic":"Cell Biology","examBoard":"Edexcel","q":"Active transport moves substances:","choices":["Down a concentration gradient without energy","Against a concentration gradient using energy","Only in gases","Only in water"],"answerIndex":1,"explanation":"Active transport requires energy to move against the gradient."},
  {"subject":"Biology","topic":"Cell Biology","examBoard":"Edexcel","q":"Which is the correct order for magnification?","choices":["Magnification = image size ÷ actual size","Magnification = actual size ÷ image size","Magnification = image size × actual size","Magnification = actual size × image size"],"answerIndex":0,"explanation":"Magnification is image size divided by real (actual) size."},
  {"subject":"Biology","topic":"Cell Biology","examBoard":"Edexcel","q":"Which cell type carries oxygen in the blood?","choices":["Platelet","Red blood cell","White blood cell","Nerve cell"],"answerIndex":1,"explanation":"Red blood cells contain haemoglobin to transport oxygen."},

  /* =======================
     Organisation (10)
     ======================= */
  {"subject":"Biology","topic":"Organisation","examBoard":"Edexcel","q":"A group of similar cells working together is called a:","choices":["Organ","Tissue","System","Organism"],"answerIndex":1,"explanation":"Tissues are groups of similar cells performing a function."},
  {"subject":"Biology","topic":"Organisation","examBoard":"Edexcel","q":"Which is the correct order of organisation?","choices":["Cells → organs → tissues → systems","Cells → tissues → organs → systems","Tissues → cells → organs → systems","Organs → tissues → cells → systems"],"answerIndex":1,"explanation":"Cells form tissues, tissues form organs, organs form systems."},
  {"subject":"Biology","topic":"Organisation","examBoard":"Edexcel","q":"The heart is best described as a:","choices":["Cell","Tissue","Organ","System"],"answerIndex":2,"explanation":"The heart is an organ made of different tissues."},
  {"subject":"Biology","topic":"Organisation","examBoard":"Edexcel","q":"Which blood vessel carries blood away from the heart?","choices":["Vein","Artery","Capillary","Ventricle"],"answerIndex":1,"explanation":"Arteries carry blood away from the heart."},
  {"subject":"Biology","topic":"Organisation","examBoard":"Edexcel","q":"Which component of blood is mainly responsible for clotting?","choices":["Plasma","Red blood cells","Platelets","White blood cells"],"answerIndex":2,"explanation":"Platelets help blood clot and form scabs."},
  {"subject":"Biology","topic":"Organisation","examBoard":"Edexcel","q":"The part of the digestive system where most absorption of digested food occurs is the:","choices":["Stomach","Small intestine","Large intestine","Oesophagus"],"answerIndex":1,"explanation":"The small intestine has villi for absorption."},
  {"subject":"Biology","topic":"Organisation","examBoard":"Edexcel","q":"Which is an adaptation of villi for absorption?","choices":["Thick walls","Small surface area","Large surface area","No blood supply"],"answerIndex":2,"explanation":"Villi increase surface area and have a good blood supply."},
  {"subject":"Biology","topic":"Organisation","examBoard":"Edexcel","q":"Bile helps digestion by:","choices":["Breaking starch into sugars","Neutralising stomach acid and emulsifying fats","Producing enzymes in the stomach","Breaking protein into amino acids"],"answerIndex":1,"explanation":"Bile neutralises acid and emulsifies fat to increase surface area."},
  {"subject":"Biology","topic":"Organisation","examBoard":"Edexcel","q":"Which enzyme digests proteins into amino acids?","choices":["Amylase","Lipase","Protease","Cellulase"],"answerIndex":2,"explanation":"Proteases break proteins into amino acids."},
  {"subject":"Biology","topic":"Organisation","examBoard":"Edexcel","q":"A balanced diet should include:","choices":["Only carbohydrates","Only proteins","A range of nutrients in suitable proportions","No fats at all"],"answerIndex":2,"explanation":"A balanced diet includes carbohydrates, proteins, lipids, vitamins, minerals, fibre and water."},

  /* =======================
     Infection & Response (10)
     ======================= */
  {"subject":"Biology","topic":"Infection & Response","examBoard":"Edexcel","q":"A pathogen is:","choices":["A harmless microbe","A disease-causing microorganism","A type of white blood cell","A vaccine"],"answerIndex":1,"explanation":"Pathogens are microorganisms that cause disease."},
  {"subject":"Biology","topic":"Infection & Response","examBoard":"Edexcel","q":"Which is an example of a virus-caused disease?","choices":["Salmonella","Measles","Malaria","Athlete's foot"],"answerIndex":1,"explanation":"Measles is caused by a virus."},
  {"subject":"Biology","topic":"Infection & Response","examBoard":"Edexcel","q":"Antibiotics are effective against:","choices":["Viruses only","Bacteria only","Fungi only","All pathogens"],"answerIndex":1,"explanation":"Antibiotics target bacterial processes; they do not kill viruses."},
  {"subject":"Biology","topic":"Infection & Response","examBoard":"Edexcel","q":"Why is antibiotic resistance a problem?","choices":["It makes antibiotics stronger","It means infections are harder to treat","It stops vaccines working","It increases virus reproduction"],"answerIndex":1,"explanation":"Resistant bacteria survive treatment, making infections harder to cure."},
  {"subject":"Biology","topic":"Infection & Response","examBoard":"Edexcel","q":"Which is a physical barrier to infection?","choices":["Antibodies","Skin","Vaccination","Antibiotics"],"answerIndex":1,"explanation":"Skin is a barrier preventing pathogens entering the body."},
  {"subject":"Biology","topic":"Infection & Response","examBoard":"Edexcel","q":"White blood cells help defend the body by:","choices":["Carrying oxygen","Producing antibodies","Producing insulin","Clotting blood"],"answerIndex":1,"explanation":"Some white blood cells produce antibodies to target pathogens."},
  {"subject":"Biology","topic":"Infection & Response","examBoard":"Edexcel","q":"Vaccination works by:","choices":["Killing all pathogens directly","Triggering an immune response and creating memory cells","Replacing damaged organs","Increasing heart rate"],"answerIndex":1,"explanation":"Vaccines stimulate immunity and memory cell formation."},
  {"subject":"Biology","topic":"Infection & Response","examBoard":"Edexcel","q":"If a vaccine programme reduces disease spread because many people are immune, this is called:","choices":["Selective breeding","Herd immunity","Photosynthesis","Homeostasis"],"answerIndex":1,"explanation":"Herd immunity reduces transmission through population immunity."},
  {"subject":"Biology","topic":"Infection & Response","examBoard":"Edexcel","q":"Which is a fungal infection?","choices":["HIV","Athlete's foot","Cholera","Influenza"],"answerIndex":1,"explanation":"Athlete's foot is caused by a fungus."},
  {"subject":"Biology","topic":"Infection & Response","examBoard":"Edexcel","q":"Malaria is spread by:","choices":["Contaminated water","Mosquito vectors","Air droplets","Direct contact only"],"answerIndex":1,"explanation":"Malaria is transmitted by mosquitoes acting as vectors."},

  /* =======================
     Bioenergetics (10)
     ======================= */
  {"subject":"Biology","topic":"Bioenergetics","examBoard":"Edexcel","q":"Photosynthesis occurs mainly in which organelle?","choices":["Nucleus","Mitochondrion","Chloroplast","Ribosome"],"answerIndex":2,"explanation":"Photosynthesis takes place in chloroplasts containing chlorophyll."},
  {"subject":"Biology","topic":"Bioenergetics","examBoard":"Edexcel","q":"The word equation for photosynthesis is:","choices":["Glucose + oxygen → carbon dioxide + water","Carbon dioxide + water → glucose + oxygen","Oxygen + water → glucose + carbon dioxide","Glucose → lactic acid"],"answerIndex":1,"explanation":"CO2 + water produce glucose + oxygen (in light, with chlorophyll)."},
  {"subject":"Biology","topic":"Bioenergetics","examBoard":"Edexcel","q":"Which factor can limit the rate of photosynthesis?","choices":["Light intensity","Carbon dioxide concentration","Temperature","All of these"],"answerIndex":3,"explanation":"Any of these can be limiting depending on conditions."},
  {"subject":"Biology","topic":"Bioenergetics","examBoard":"Edexcel","q":"The main purpose of respiration in cells is to:","choices":["Produce chlorophyll","Release energy from glucose","Make proteins","Make minerals"],"answerIndex":1,"explanation":"Respiration releases energy for cellular processes."},
  {"subject":"Biology","topic":"Bioenergetics","examBoard":"Edexcel","q":"Aerobic respiration requires:","choices":["Oxygen","Carbon dioxide","Chlorophyll","Lactic acid"],"answerIndex":0,"explanation":"Aerobic respiration uses oxygen."},
  {"subject":"Biology","topic":"Bioenergetics","examBoard":"Edexcel","q":"The word equation for aerobic respiration is:","choices":["Glucose + oxygen → carbon dioxide + water","Carbon dioxide + water → glucose + oxygen","Glucose → ethanol + carbon dioxide","Glucose → lactic acid"],"answerIndex":0,"explanation":"Glucose and oxygen produce CO2 and water, releasing energy."},
  {"subject":"Biology","topic":"Bioenergetics","examBoard":"Edexcel","q":"In animals, anaerobic respiration produces:","choices":["Lactic acid","Ethanol","Oxygen","Glucose"],"answerIndex":0,"explanation":"Anaerobic respiration in muscles produces lactic acid."},
  {"subject":"Biology","topic":"Bioenergetics","examBoard":"Edexcel","q":"In yeast, anaerobic respiration (fermentation) produces:","choices":["Lactic acid and oxygen","Ethanol and carbon dioxide","Glucose and oxygen","Carbon dioxide and water"],"answerIndex":1,"explanation":"Yeast fermentation produces ethanol and carbon dioxide."},
  {"subject":"Biology","topic":"Bioenergetics","examBoard":"Edexcel","q":"After strenuous exercise, oxygen debt is mainly needed to:","choices":["Convert lactic acid to glucose","Break down lactic acid","Increase photosynthesis","Produce antibodies"],"answerIndex":1,"explanation":"Extra oxygen is needed to process and remove lactic acid."},
  {"subject":"Biology","topic":"Bioenergetics","examBoard":"Edexcel","q":"Which is a common use of glucose in plants?","choices":["Making cellulose for cell walls","Making antibodies","Making urea","Making haemoglobin"],"answerIndex":0,"explanation":"Plants use glucose to make cellulose and other substances."},

  /* =======================
     Homeostasis & Response (10)
     ======================= */
  {"subject":"Biology","topic":"Homeostasis","examBoard":"Edexcel","q":"Homeostasis is the maintenance of:","choices":["A constant internal environment","A constant external environment","Only body temperature","Only blood glucose"],"answerIndex":0,"explanation":"Homeostasis keeps internal conditions stable."},
  {"subject":"Biology","topic":"Homeostasis","examBoard":"Edexcel","q":"Normal human body temperature is close to:","choices":["27°C","37°C","47°C","57°C"],"answerIndex":1,"explanation":"The normal core body temperature is about 37°C."},
  {"subject":"Biology","topic":"Homeostasis","examBoard":"Edexcel","q":"Which response helps cool the body?","choices":["Shivering","Vasoconstriction","Sweating","Less breathing"],"answerIndex":2,"explanation":"Sweating increases heat loss by evaporation."},
  {"subject":"Biology","topic":"Homeostasis","examBoard":"Edexcel","q":"Vasodilation in the skin causes:","choices":["Less blood flow near the surface","More blood flow near the surface","Less sweating","More shivering"],"answerIndex":1,"explanation":"Vasodilation increases blood flow near the skin to lose heat."},
  {"subject":"Biology","topic":"Homeostasis","examBoard":"Edexcel","q":"Shivering helps warm the body because muscles:","choices":["Stop respiring","Respire more, releasing heat","Produce insulin","Produce bile"],"answerIndex":1,"explanation":"Increased respiration releases energy as heat."},
  {"subject":"Biology","topic":"Homeostasis","examBoard":"Edexcel","q":"The hormone that lowers blood glucose is:","choices":["Adrenaline","Insulin","Glucagon","Thyroxine"],"answerIndex":1,"explanation":"Insulin reduces blood glucose by increasing uptake and storage."},
  {"subject":"Biology","topic":"Homeostasis","examBoard":"Edexcel","q":"The hormone that raises blood glucose is:","choices":["Insulin","Glucagon","Oestrogen","ADH"],"answerIndex":1,"explanation":"Glucagon increases blood glucose by stimulating glycogen breakdown."},
  {"subject":"Biology","topic":"Homeostasis","examBoard":"Edexcel","q":"Which organ monitors and controls blood glucose?","choices":["Heart","Pancreas","Lungs","Stomach"],"answerIndex":1,"explanation":"The pancreas releases insulin and glucagon."},
  {"subject":"Biology","topic":"Homeostasis","examBoard":"Edexcel","q":"ADH affects how much water is reabsorbed in the:","choices":["Stomach","Liver","Kidney tubules","Lungs"],"answerIndex":2,"explanation":"ADH increases water reabsorption in kidney tubules/collecting ducts."},
  {"subject":"Biology","topic":"Homeostasis","examBoard":"Edexcel","q":"Type 1 diabetes is best described as:","choices":["Insulin resistance","The pancreas producing little or no insulin","Too much glucagon","Too much sweating"],"answerIndex":1,"explanation":"Type 1 diabetes involves insufficient insulin production."}
]
